{
  "name": "react-solidflow",
  "version": "1.0.0",
  "description": "A SolidJS inspired collection of flow utility components for React.",
  "keywords": [
    "react",
    "solidjs",
    "solid",
    "utilities",
    "for",
    "arrays",
    "flow",
    "jsx",
    "templating"
  ],
  "license": "MIT",
  "author": "GeorgeCht <info@georgecht.com>",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "check": "turbo check",
    "clean": "turbo clean",
    "bump": "bunx changeset && bunx changeset version",
    "size": "size-limit",
    "commit": "git add . && cz"
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "size-limit": "^11.1.6",
    "turbo": "^2.3.3",
    "typescript": "5.5.4",
    "rimraf": "6.0.1",
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.11",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/react": "^18.3.18"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.30",
  "workspaces": ["apps/*", "packages/*"],
  "size-limit": [
    {
      "path": "packages/solidflow/dist/index.js",
      "limit": "5 kB"
    },
    {
      "path": "packages/solidflow/dist/index.cjs",
      "limit": "5 kB"
    },
    {
      "path": "packages/solidflow/dist/index.min.js",
      "limit": "5 kB"
    },
    {
      "path": "packages/solidflow/dist/index.d.ts",
      "limit": "5 kB"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
